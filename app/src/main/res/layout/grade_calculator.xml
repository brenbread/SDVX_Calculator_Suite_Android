        android:layout_marginTop="11dp"
        android:text="AAA/970+"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

